<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:my="urn:import:com.airdropaddict.webpage.client.ui" xmlns:ma="urn:import:gwt.material.design.addins.client">

	<ui:style>
	.customHeader {
		position: fixed;
		top: 0;
		width: 100%;
		height: 55px
	}
	
	.customFooter {
		position: fixed;
		bottom: 0;
		width: 100%;
		height: 40px
	}
	</ui:style>

	<m:MaterialContainer>
		<m:MaterialPanel m:id="header" depth="998"
			addStyleNames="{style.customHeader}" backgroundColor="LIGHT_BLUE"
			shadow="1">
			<m:MaterialRow>
				<m:MaterialColumn grid="s11 m11 l7" border="0"
					centerOn="CENTER_ON_SMALL">
					<m:MaterialImage url="./images/logoHeader.png"
						grid="s6" width="54px" height="52px" paddingTop="4" flex="NONE" />
					<m:MaterialLabel text="AirdropAddict" fontSize="3.0em"
						grid="s6 " fontWeight="BOLD" paddingLeft="2" paddingTop="2"
						textColor="WHITE" flex="ELEVEN" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="s1 m1 l5" border="0"
					hideOn="HIDE_ON_MED_DOWN" marginTop="16">
					<m:MaterialLink iconType="ACCOUNT_CIRCLE" ui:field="accountLink"
						textColor="WHITE" waves="ORANGE" paddingLeft="16" paddingRight="16"
						float="RIGHT" />
					<m:MaterialLink text="Tutorial" textColor="WHITE"
						waves="ORANGE" ui:field="tutorialTab" fontSize="1.2em" fontWeight="BOLD"
						paddingLeft="16" float="RIGHT" />
					<m:MaterialLink text="UntrustedAirdrops" textColor="WHITE"
						waves="ORANGE" ui:field="untrustedTab" fontSize="1.2em"
						fontWeight="BOLD" paddingLeft="16" float="RIGHT" />
					<m:MaterialLink text="DalyAirdrops" textColor="ORANGE_LIGHTEN_3"
						waves="ORANGE" ui:field="airdropsTab" fontSize="1.2em" fontWeight="BOLD"
						float="RIGHT" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="s1 m1 l5" border="0"
					hideOn="HIDE_ON_LARGE" marginTop="14">
					<m:MaterialLink m:id="sidenavActivator" iconType="MENU"
						activates="sidenav" textColor="WHITE" fontSize="3.0em" float="RIGHT" />
				</m:MaterialColumn>
			</m:MaterialRow>

			<!-- <m:MaterialSideNav m:id="sidenav" width="200" closeOnClick="true" 
				showOnAttach="false"> <m:MaterialLink text="Daly Airdrops" /> <m:MaterialLink 
				text="Untrusted Airdrops" /> <m:MaterialLink text="Tutorial" /> </m:MaterialSideNav> -->

			<my:CustomMaterialSideNavDrawer m:id="sidenav"
				ui:field="sideNav" withHeader="false" allowBodyScroll="false" edge="RIGHT">
				<m:MaterialLink iconType="SEND" text="Send Mail" />
				<m:MaterialLink iconType="DRAFTS" text="Drafts" />
				<m:MaterialLink iconType="MAIL" text="All Mail" />
				<m:MaterialLink iconType="DELETE" text="Trash" />
				<m:MaterialLink iconType="INFO_OUTLINE" text="Spam" />
			</my:CustomMaterialSideNavDrawer>

			<!-- <m:MaterialDropDown activator="dropdown" width="180px"> <m:MaterialLink 
				text="Daly Airdrops" /> <m:MaterialLink text="Untrusted Airdrops" /> <m:MaterialLink 
				text="Tutorial" /> </m:MaterialDropDown> -->
		</m:MaterialPanel>

		<m:MaterialPanel paddingTop="120" paddingLeft="130"
			paddingRight="130">
			<m:MaterialRow>
				<m:MaterialColumn grid="s12 m12 l9" border="0"
					ui:field="content">
					<my:AirdropsContainer ui:field="airdrops">
					</my:AirdropsContainer>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s12 m12 l3" border="0">
					<my:InfosContainer>
					</my:InfosContainer>
				</m:MaterialColumn>
			</m:MaterialRow>
		</m:MaterialPanel>

		<m:MaterialPanel depth="998" addStyleNames="{style.customFooter}"
			backgroundColor="LIGHT_BLUE" shadow="1">
			<m:MaterialRow>
				<m:MaterialLabel text="Â© Copyright AirdropAddict"
					grid="s10" paddingLeft="20" paddingTop="10" textColor="WHITE" />
				<m:MaterialColumn grid="s2" paddingRight="30">
					<m:MaterialLink href="https://www.facebook.com/airdropaddict"
						target="_blank">
						<m:MaterialImage url="./images/facebook28.png"
							float="RIGHT" paddingLeft="15" paddingTop="6" />
					</m:MaterialLink>
					<m:MaterialLink href="https://twitter.com/airdropaddict"
						target="_blank">
						<m:MaterialImage url="./images/twitter28.png"
							float="RIGHT" paddingTop="6" />
					</m:MaterialLink>
				</m:MaterialColumn>
			</m:MaterialRow>
		</m:MaterialPanel>
	</m:MaterialContainer>
</ui:UiBinder> 